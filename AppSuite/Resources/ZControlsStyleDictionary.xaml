                                Opacity="0"
                                Stroke="{ThemeResource ZAccentBrush}"
                                StrokeThickness="{ThemeResource RadioButtonBorderThemeThickness}"
                                UseLayoutRounding="False" />
                            <Ellipse
                                x:Name="CheckGlyph"
                                Width="20"
                                Height="20"
                                Fill="White"
                                Opacity="0"
                                Stroke="{ThemeResource ZAccentBrush}"
                                StrokeThickness="6"
                                UseLayoutRounding="False" />
