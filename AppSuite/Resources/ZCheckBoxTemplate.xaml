<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Zoho.UWP.Components.Controls"
    xmlns:local="using:Zoho.UWP.AppSuite.Resources">

    <Style x:Key="ZCheckBoxStyleDefault" TargetType="controls:ZCheckBox">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Width" Value="12" />
        <Setter Property="Height" Value="12" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundAccentBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid
                        Name="OuterBorder"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{ThemeResource ZBWBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <TextBlock
                            Name="GlyphIcon"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            x:Load="False"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="{TemplateBinding FontSize}"
                            Foreground="White"
                            Text="&#xE001;"
                            Visibility="Collapsed" />
                        <Grid
                            Name="InderminateIndicator"
                            Margin="1.5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            x:Load="False"
                            Background="#BF000000"
                            Visibility="Collapsed" />
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Checked">
                                    <VisualState.Setters>
                                        <Setter Target="GlyphIcon.Visibility" Value="Visible" />
                                        <Setter Target="OuterBorder.BorderThickness" Value="0" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="UnChecked">
                                    <VisualState.Setters>
                                        <Setter Target="OuterBorder.Background" Value="Transparent" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Indeterminant">
                                    <VisualState.Setters>
                                        <Setter Target="InderminateIndicator.Visibility" Value="Visible" />
                                        <Setter Target="OuterBorder.Background" Value="White" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="VisibleUnchecked">
                                    <VisualState.Setters>
                                        <Setter Target="GlyphIcon.Visibility" Value="Collapsed" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>