<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Zoho.UWP.AppSuite.Resources.ThemeDictionaries.Light">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///ZohoUWPComponents/Theme/Resources/ZCommonThemeDictionaryLight.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="ZBaseBrush" Color="White" />

    <!--  Border Brushes  -->
    <SolidColorBrush x:Key="ZBorderBrushLight" Color="#FFE3E3E3" />
    <SolidColorBrush x:Key="ZBorderBrush" Color="#FFDCDCDC" />
    <SolidColorBrush x:Key="ZLabelBorderBrush" Color="#E0E0E0" />
    <SolidColorBrush x:Key="ZBorderBrushExtraLight" Color="#FFF2F2F2" />

    <!--  Extra Light in light dictionary alone  -->
    <SolidColorBrush x:Key="ZTransientControlBorderBrush" Color="#FFCCCCCC" />
    <!--  BG Brushes  -->
    <SolidColorBrush x:Key="ZPrimaryContentBGBrush" Color="{Binding Color, Source={StaticResource ZWhiteBrush}}" />
    <SolidColorBrush x:Key="ZSecondaryContentBGBrush" Color="#FFEBEBEB" />
    <SolidColorBrush x:Key="ZChatBubbleControlBGBrush" Color="WhiteSmoke" />
    <SolidColorBrush x:Key="ZSearchBarBGBrush" Color="#FFF2F2F2" />
    <SolidColorBrush x:Key="ComposeFormattingBarBGBrush" Color="#FFF2F4F7" />
    <SolidColorBrush x:Key="DisabledButtonBackground">#FFE5E5E5</SolidColorBrush>
    <SolidColorBrush x:Key="ChatControlBackGroundBrush">#FFFFFFFF</SolidColorBrush>
    <SolidColorBrush x:Key="ZTabDarkBGBrush" Color="#FFE6E6E6" />
    
    <!--  Light Acrylic Brushes | used in 2nd pane in 3 pane view  -->

    <AcrylicBrush
        x:Key="ZLightAcrylicBrushWithBackdrop"
        BackgroundSource="Backdrop"
        FallbackColor="#FFFFFFFF"
        TintColor="#FFFFFFFF"
        TintOpacity="0.74" />

    <AcrylicBrush
        x:Key="ZInAppThemeAcrylicBrush"
        BackgroundSource="Backdrop"
        FallbackColor="{Binding Color, Source={StaticResource ZThemeBrush}}"
        Opacity="0.5"
        TintColor="{Binding Color, Source={StaticResource ZThemeBrush}}"
        TintOpacity="0.1" />

    <AcrylicBrush
        x:Key="ZInAppLightAcrylicBrush"
        BackgroundSource="Backdrop"
        FallbackColor="#FFFFFFFF"
        TintColor="#FFFFFFFF"
        TintOpacity="0.7" />

    <!--  FG Brushes  -->
    <SolidColorBrush x:Key="ZSearchBarFGBrush" Color="#FF767676" />
    <SolidColorBrush x:Key="ZChatTitleFGBrush" Color="#FF444444" />
    <SolidColorBrush x:Key="ZActionButtonForegroundBrush" Color="#FF333333" />
    <SolidColorBrush x:Key="LabelForegroundBrush" Color="#FF7F7F7F" />
    <SolidColorBrush x:Key="ZServicePointerOverFGBrush" Color="{Binding Color, Source={StaticResource ZBWThemedFGBrush}}" />
    <SolidColorBrush x:Key="ZBaseFGBrush" Color="Black" />
    <SolidColorBrush x:Key="ZSecondaryContentFGBrush" Color="#FF666666" />

    <!--  Brushes for Service Navigation  -->
    <SolidColorBrush x:Key="ZActiveServiceFGBrush" Color="{Binding Color, Source={StaticResource ZWhiteOrAccentFGBrush}}" />
    <SolidColorBrush x:Key="ZActiveLeftServiceFGBrush" Color="#FFFFFFFF" />
    <Color x:Key="ZServiceHoverColor">#FF000000</Color>
    <x:Double x:Key="ZServiceHoverOpacity">0.08</x:Double>
    <Color x:Key="ZServicePressedColor">#FF000000</Color>
    <x:Double x:Key="ZServicePressedOpacity">0.16</x:Double>
    <SolidColorBrush
        x:Key="ZInactiveServiceFGBrush"
        Opacity="0.65"
        Color="{Binding Color, Source={StaticResource ZBWThemedFGBrush}}" />
    <SolidColorBrush
        x:Key="ZInactiveLeftServiceFGBrush"
        Opacity="0.65"
        Color="{Binding Color, Source={ThemeResource ZBaseFGBrush}}" />
    <SolidColorBrush
        x:Key="ZInactiveLeftServiceEllipseFGBrush"
        Opacity="0.14"
        Color="{Binding Color, Source={ThemeResource ZBaseFGBrush}}" />


    <SolidColorBrush
        x:Key="ZFolderViewSectionHeaderBrush"
        Opacity="0.5"
        Color="Black" />

    <!--  ListviewItem Brush Styles  -->
    <SolidColorBrush
        x:Key="ZLVItemSelectedDarkBGBrush"
        Opacity="0.15"
        Color="#AA000000" />
    <SolidColorBrush
        x:Key="ZLVItemSelectedPressedDarkBGBrush"
        Opacity="0.3"
        Color="#AA000000" />
    <SolidColorBrush
        x:Key="ZLVItemPointerOverDarkBGBrush"
        Opacity="0.05"
        Color="#AA000000" />
    <SolidColorBrush
        x:Key="ZLVItemSelectedPointerOverDarkBGBrush"
        Opacity="0.05"
        Color="#AA000000" />
    <SolidColorBrush
        x:Key="ListContextHighlightBrush"
        Opacity=".2"
        Color="#AA000000" />

    <Color x:Key="ZDropShadowPanelShadowColor">Black</Color>
    <Color x:Key="ZDropShadowPanelShadowBlackColor">Black</Color>
    <Color x:Key="ZSeparatorDotColor">#FFE0E0E0</Color>
    <SolidColorBrush x:Key="ReadStatusBrush" Color="#FFD0D0D0" />
    <SolidColorBrush x:Key="ZSeparatorDotBrush" Color="{StaticResource ZSeparatorDotColor}" />

    <!--  CRM Widget Resources  -->
    <Color x:Key="ClosedLostColor">#db5b59</Color>
    <Color x:Key="StageSelectionColor">#0fc7ab</Color>
    <Color x:Key="ContentColor">#2b3744</Color>
    <Color x:Key="AddButtonBackgroundColor">#ed5b53</Color>
    <Color x:Key="NormalPriorityColor">#eaeaea</Color>
    <Color x:Key="LowPriorityColor">#eaeaea</Color>
    <Color x:Key="MediumPriorityColor">#fff1db</Color>
    <Color x:Key="HighPriorityColor">#ffe3e3</Color>
    <SolidColorBrush x:Key="AddButtonBackgroundBrush" Color="{ThemeResource AddButtonBackgroundColor}" />
    <SolidColorBrush x:Key="CurrentIgniteContentColor" Color="{ThemeResource ContentColor}" />
    <SolidColorBrush
        x:Key="CurrentIgniteContentColorWithOpacity"
        Opacity="0.6"
        Color="{ThemeResource ContentColor}" />
    <SolidColorBrush x:Key="StageSelectionBrush" Color="{ThemeResource StageSelectionColor}" />
    <SolidColorBrush x:Key="ClosedLostBrush" Color="{ThemeResource ClosedLostColor}" />
    <SolidColorBrush x:Key="TransparentColorBrush" Color="Transparent" />
    <SolidColorBrush x:Key="ModuleListBrush" Color="White" />
    <SolidColorBrush x:Key="NormalPriorityBrush" Color="{ThemeResource NormalPriorityColor}" />
    <SolidColorBrush x:Key="LowPriorityBrush" Color="{ThemeResource LowPriorityColor}" />
    <SolidColorBrush x:Key="MediumPriorityBrush" Color="{ThemeResource MediumPriorityColor}" />
    <SolidColorBrush x:Key="HighPriorityBrush" Color="{ThemeResource HighPriorityColor}" />
    <SolidColorBrush x:Key="HotDealStageBrush" Color="#1b84e8" />
    <SolidColorBrush x:Key="HotDealStageCWBrush" Color="{ThemeResource StageSelectionColor}" />
    <SolidColorBrush x:Key="HotDealStageCLBrush" Color="{ThemeResource ClosedLostColor}" />
    <SolidColorBrush x:Key="CalendarDayViewTaskColor" Color="#f8b13e" />
    <SolidColorBrush x:Key="CalendarDayViewEventColor" Color="#3098e6" />
    <SolidColorBrush x:Key="CalendarDayViewCallColor" Color="#49aa89" />
    <SolidColorBrush x:Key="ZAppBarButtonIconFGBrush" Color="{Binding ZAccentColor,Source={StaticResource ZCommonAccentColorPalette}}"/>
    <SolidColorBrush x:Key="ZAppBarButtonTextFGBrush" Color="{Binding Color,Source={StaticResource ZPrimaryFGBrush}}"/>

</ResourceDictionary>
