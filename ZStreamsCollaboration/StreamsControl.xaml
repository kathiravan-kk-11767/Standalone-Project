<UserControl
    x:Class="Zoho.UWP.ZStreamsCollaboration.StreamsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Zoho.UWP.ZStreamsCollaboration"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:streamscommentview="using:Zoho.Streams.Collaboration.Views.UWP.StreamsCommentView"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ZPrimaryBGBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Click="Button_Click">Load Comment Where I am the owner</Button>
            <Button Click="Button_Click1">Load Comment where I am not the owner</Button>
        </StackPanel>
        <ScrollViewer Grid.Row="2" ScrollViewer.VerticalScrollMode="Auto">
            <streamscommentview:StreamsCommentsListViewControl
                x:Name="CommentControl"
                Grid.Row="2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="Turquoise" />
        </ScrollViewer>

    </Grid>
</UserControl>
